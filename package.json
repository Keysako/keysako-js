{
  "name": "keysako-identity",
  "version": "1.0.6",
  "description": "Keysako Identity Sign-in buttons",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/keysako-connect.js",
  "module": "dist/keysako-connect.esm.js",
  "types": "dist/keysako-connect.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:core": "tsc --build packages/core",
    "build:react": "tsc --build packages/react",
    "build:vue": "tsc --build packages/vue",
    "build:ts": "tsc --build",
    "build:bundle": "node scripts/build.js",
    "build": "npm run build:ts && npm run build:bundle && node scripts/prepare-cdn.js",
    "build:cdn": "node scripts/prepare-cdn.js",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=@keysako-identity/core",
    "test:react": "npm run test --workspace=@keysako-identity/react",
    "test:vue": "npm run test --workspace=@keysako-identity/vue",
    "prepare": "npm run build",
    "start": "node server.js",
    "lint": "eslint \"packages/**/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"packages/**/src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "fix-all": "npm run format && npm run lint:fix"
  },
  "keywords": [
    "identity",
    "authentication",
    "oauth",
    "openid-connect",
    "google",
    "signin"
  ],
  "author": "Keysako Dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keysako/keysako-js"
  },
  "bugs": {
    "url": "https://github.com/keysako/keysako-js/issues"
  },
  "homepage": "https://keysako.github.io",
  "devDependencies": {
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.1.6",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^11.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "ts-jest": "^29.3.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "eslint": "^9.24.0"
  }
}
