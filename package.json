{
  "name": "keysako-identity",
  "version": "1.0.6",
  "description": "A simple library for integrating authentication with various identity providers",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/keysako-connect.min.js",
  "module": "dist/keysako-connect.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:ts": "tsc",
    "build:bundle": "node build.js",
    "build": "npm run build:ts && npm run build:bundle",
    "build:cdn": "node scripts/prepare-cdn.js",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=@keysako-identity/core",
    "test:react": "npm run test --workspace=@keysako-identity/react",
    "test:vue": "npm run test --workspace=@keysako-identity/vue",
    "prepare": "npm run build",
    "start": "node server.js",
    "lint": "eslint \"packages/**/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"packages/**/src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "fix-all": "npm run format && npm run lint:fix"
  },
  "keywords": [
    "identity",
    "authentication",
    "oauth",
    "openid-connect",
    "google",
    "signin"
  ],
  "author": "Keysako Dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keysako/keysako-js"
  },
  "bugs": {
    "url": "https://github.com/keysako/keysako-js/issues"
  },
  "homepage": "https://keysako.github.io",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.7",
    "terser": "^5.36.0",
    "ts-jest": "^29.3.1",
    "typescript": "^4.9.5"
  }
}
